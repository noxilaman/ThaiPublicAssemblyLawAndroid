<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.purchase.PurchaseActivity">

    <!--toolbar-->
    <RelativeLayout android:layout_width="match_parent" android:layout_height="?actionBarSize"
                    android:background="@color/colorPrimary">

        <TextView android:id="@+id/tv_cancel"
                  android:layout_width="wrap_content" android:layout_height="match_parent"
                  android:text="@string/back"
                  android:gravity="center"
                  android:paddingStart="16dp"
                  android:textColor="@android:color/white"
                  android:paddingEnd="8dp"
                  android:layout_alignParentStart="true"
                  android:textSize="16sp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:gravity="center"
                  android:text="@string/upgrade_premium"
                  android:textColor="@android:color/white"
                  android:textSize="16sp"/>

    </RelativeLayout>
    <!--end Toolbar-->

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="พรีเมี่ยม (ใช้งานครบทุกฟังชั่น)"
                  android:textSize="16sp"
                  android:textColor="@android:color/black"
                  android:padding="16sp"
                  android:textStyle="bold"
                  android:lineSpacingMultiplier="1.5"/>

        <TextView android:id="@+id/tv_price"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="150 บาท"
                  android:textSize="16sp"
                  android:textColor="@color/colorPrimary"
                  android:layout_alignParentEnd="true"
                  android:padding="16sp"
                  android:textStyle="bold"
                  android:lineSpacingMultiplier="1.5"/>

    </RelativeLayout>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="อัพเกรดพรีเมี่ยมเพื่อ Register พร้อมกับฟังชั่น Bookmark, Note และ Share ได้"
    android:textSize="16sp"
    android:textColor="@android:color/black"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp"
    android:lineSpacingMultiplier="1.5"/>

    <TextView android:id="@+id/tv_buy"
            android:layout_width="wrap_content" android:layout_height="48dp"
              android:text="ซื้อ"
              android:textSize="16sp"
              android:layout_marginTop="16dp"
              android:layout_gravity="end"
              android:layout_marginEnd="16dp"
              android:textColor="@android:color/white"
              android:background="@color/colorPrimary"
              android:paddingStart="32dp"
              android:paddingEnd="32dp"
              android:gravity="center"
              android:textStyle="bold"
              android:lineSpacingMultiplier="1.5"/>

</LinearLayout>